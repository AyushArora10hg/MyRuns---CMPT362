<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar"
        style="@style/Widget.MyRuns.AppBar"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "@string/heading_map_display"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            style="@style/Widget.MyRuns.HeadingNoBackground"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id = "@+id/md_button_delete"
            android:text="@string/button_delete"
            android:gravity="center"
            app:cornerRadius="0dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:textSize="15sp"/>

    </RelativeLayout>

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/md_fragment_container"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar"
        tools:context=".mapdisplay.MapDisplayActivity" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_bar"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/md_stats_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/md_tv_stats_type"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/md_stats_average_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/md_tv_stats_average_speed"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/md_stats_current_speed"
            android:layout_width= "wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/md_tv_stats_current_speed"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/md_stats_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/md_tv_stats_calories"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/md_stats_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/md_tv_stats_distance"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/md_stats_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/md_tv_stats_comments"
            android:textSize="18sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/md_button_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_positive"
            app:cornerRadius="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="3dp"/>

        <Button
            android:id="@+id/md_button_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_negative"
            app:cornerRadius="0dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

</RelativeLayout>