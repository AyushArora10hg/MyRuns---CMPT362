<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ayush_Arora_MyRuns" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/dark_background</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/accent_blue</item>
        <item name="colorOnSecondary">@color/dark_background</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnBackground">@color/dark_text_primary</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        <item name="android:textColorHint">@color/dark_text_secondary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Ayush_Arora_MyRuns" parent="Base.Theme.Ayush_Arora_MyRuns" />

    <!-- Button Styles -->
    <style name="Widget.MyRuns.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/green_light</item>
        <item name="android:textColor">@color/dark_background</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Widget.MyRuns.ButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/green_light</item>
        <item name="android:textColor">@color/green_light</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- EditText Styles -->
    <style name="Widget.MyRuns.EditText" parent="android:Widget.EditText">
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textColorHint">@color/dark_text_secondary</item>
        <item name="android:background">@drawable/edittext_background_dark</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- TextView Styles -->
    <style name="Widget.MyRuns.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="Widget.MyRuns.TextViewTitle" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <style name="Widget.MyRuns.TextViewSubtitle" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_text_secondary</item>
    </style>

    <!-- CardView Style -->
    <style name="Widget.MyRuns.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/dark_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>

    <!-- Heading/Header Style -->
    <style name="Widget.MyRuns.Heading" parent="">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:background">@color/heading_background_dark</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>

    <!-- App Bar / Header Container Style -->
    <style name="Widget.MyRuns.AppBar" parent="">
        <item name="android:background">@color/heading_background_dark</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- Heading Text (when inside AppBar) -->
    <style name="Widget.MyRuns.HeadingNoBackground" parent="">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/dark_text_primary</item>
    </style>
</resources>